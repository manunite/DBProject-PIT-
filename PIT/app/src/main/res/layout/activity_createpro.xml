<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="10sp" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:gravity="center"
        android:background="@drawable/maketodolist"
        android:text="Create Project"
        android:textColor="#FFFFFF"
        android:id="@+id/CreateProjectTitle" />

    <TextView
        android:id="@+id/inputName_pro"
        android:text="ProjectName"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/CreateProjectTitle"
        android:layout_marginLeft="15dp"
        android:layout_alignLeft="@+id/CreateProjectTitle"
        android:layout_marginTop="41dp"/>

    <TextView
        android:id="@+id/inputBriefy"
        android:text="Briefy"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@+id/inputName_pro"
        android:layout_marginLeft="15dp"
        android:layout_alignLeft="@+id/CreateProjectTitle"
        android:layout_marginTop="41dp"/>

    <TextView
        android:id="@+id/inputStart_Pro"
        android:text="StartDay"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/inputBriefy"
        android:layout_marginLeft="15dp"
        android:layout_alignLeft="@+id/CreateProjectTitle"
        android:layout_marginTop="41dp"/>

    <TextView
        android:id="@+id/inputEnd_Pro"
        android:text="EndDay"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/inputStart_Pro"
        android:layout_marginLeft="15dp"
        android:layout_alignLeft="@+id/CreateProjectTitle"
        android:layout_marginTop="41dp"/>

    <EditText
        android:id="@+id/ProjectName"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/CreateProjectTitle"
        android:layout_marginRight="15dp"
        android:layout_alignRight="@+id/CreateProjectTitle"
        android:layout_marginTop="41dp" />


    <!--아래 텍스트 뷰는 가라로 위치잡으려고 넣어놓은것! -->

    <EditText
        android:id="@+id/ProjectBriefy"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ProjectName"
        android:layout_marginRight="15dp"
        android:layout_alignRight="@+id/CreateProjectTitle"
        android:layout_marginTop="41dp" />

    <TextView
        android:id="@+id/temps"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ProjectName"
        android:layout_marginRight="15dp"
        android:layout_alignRight="@+id/CreateProjectTitle"
        android:layout_marginTop="41dp"  />

    <EditText
        android:id="@+id/ProjectStart_Y"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/inputBriefy"
        android:layout_marginRight="60dp"
        android:layout_alignRight="@+id/ProjectStart_M"
        android:layout_marginTop="41dp" />

    <EditText
        android:id="@+id/ProjectStart_M"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/inputBriefy"
        android:layout_marginRight="60dp"
        android:layout_alignRight="@+id/ProjectStart_D"
        android:layout_marginTop="41dp" />

    <EditText
        android:id="@+id/ProjectStart_D"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/inputBriefy"
        android:layout_marginRight="5dp"
        android:layout_alignRight="@+id/CreateProjectTitle"
        android:layout_marginTop="41dp" />

    <EditText
        android:id="@+id/ProjectEnd_Y"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ProjectStart_Y"
        android:layout_marginRight="60dp"
        android:layout_alignRight="@+id/ProjectEnd_M"
        android:layout_marginTop="41dp" />

    <EditText
        android:id="@+id/ProjectEnd_M"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ProjectStart_M"
        android:layout_marginRight="60dp"
        android:layout_alignRight="@+id/ProjectStart_D"
        android:layout_marginTop="41dp" />

    <EditText
        android:id="@+id/ProjectEnd_D"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ProjectStart_D"
        android:layout_marginRight="5dp"
        android:layout_alignRight="@+id/CreateProjectTitle"
        android:layout_marginTop="41dp" />

    <Button
        android:id="@+id/makeProject"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="생성!" />

