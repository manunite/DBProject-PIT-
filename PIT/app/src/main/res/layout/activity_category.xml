<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#0a3b45"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView android:text="카테고리 목록"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF00"
        android:textSize="40dp"
        android:paddingBottom="7dp"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_below="@+id/modifyCate"
        android:background="@drawable/round_background"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|bottom">
        <ExpandableListView
            android:id="@+id/elv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:groupIndicator="@null"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <Button
        android:id="@+id/deleteCate"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:background="@drawable/catemake"
        android:text="Cate 제거"
        android:layout_alignRight="@+id/makeCate"
        android:layout_below="@+id/textView"
        android:layout_marginRight="110dp"
        android:textSize="15dp"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/makeCate"
        android:text="Cate 생성"
        android:textSize="15dp"
        android:background="@drawable/catemake"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/modifyCate"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/modifyCate"
        android:text="Cate 수정"
        android:textSize="15dp"
        android:background="@drawable/catemake"
        android:layout_below="@+id/textView"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_alignRight="@+id/textView"
        android:gravity="center"/>




</RelativeLayout>
