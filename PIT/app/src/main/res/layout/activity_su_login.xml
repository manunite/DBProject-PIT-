<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:layout_gravity="center"
    android:background="#0a3b45">

    <TextView android:text="P I T"
        android:layout_gravity="center_horizontal"
        android:paddingTop="40dp"
        android:paddingBottom="10dp"
        android:textSize="90dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:text="Admin Page"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="30dp"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#df251f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/Login_Email_A"
        android:hint="  Email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:maxLength="25"
        android:background="@drawable/login_textbox"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/Login_PassWord_A"
        android:hint="  PassWord"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:maxLength="25"
        android:background="@drawable/login_textbox"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/Login_btn_A"
        android:text="Login"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_loginbutton"
        />

</LinearLayout>